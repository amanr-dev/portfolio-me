---
interface Props {
  url: string;
  image: string;
  linkText: string;
}

const { url, image, linkText } = Astro.props;
---

<!-- <a href={url} target="_blank" rel="noreferer" class="inline">
  <div>
    <img src={image} alt="" />
  </div>
</a> -->
<div class="hover-container">
  <a href={url} class="hover-link">{linkText}</a>
  <div class="hover-image">
    <img src={image} alt="Hover Image" />
  </div>
</div>

<style>
  .hover-container {
    position: relative;
    display: inline-block;
  }

  .hover-link {
    position: relative;
    z-index: 1;
    text-decoration: none;
    color: #000;
    font-weight: bold;
  }

  .hover-image {
    position: absolute;
    top: -150px; /* Adjust this to position above the link */
    left: 0;
    width: 200px; /* Adjust image size */
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    transform: translateY(10px); /* Initial slide-down effect */
  }

  .hover-container:hover .hover-image {
    opacity: 1;
    visibility: visible;
    transform: translateY(0); /* Moves image to the original position */
  }
</style>
